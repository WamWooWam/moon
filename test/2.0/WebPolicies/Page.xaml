<UserControl x:Class="WebPolicies.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="1000" Height="600">
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
		    <TextBlock>Browser</TextBlock>
                    <Button x:Name="BrowserWebClientButton"><TextBlock>WebClient</TextBlock></Button>
                    <Button x:Name="BrowserWebRequestButton"><TextBlock>WebRequest</TextBlock></Button>
                </StackPanel>
                <StackPanel Orientation="Vertical">
		    <TextBlock>Client</TextBlock>
                    <Button x:Name="ClientWebClientButton"><TextBlock>WebClient</TextBlock></Button>
                    <Button x:Name="ClientWebRequestButton"><TextBlock>WebRequest</TextBlock></Button>
                </StackPanel>
            </StackPanel>
            <TextBox x:Name="log" VerticalScrollBarVisibility="Auto" Height="500"></TextBox>
            <TextBlock x:Name="status">-</TextBlock>
            <TextBlock x:Name="reminder">Reminder: Application MUST be restarted/refreshed between executions since policies are cached.</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>

